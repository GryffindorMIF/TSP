@model IEnumerable<EShop.Models.Product>
@inject ApplicationDbContext context

@{
    ViewData["Title"] = "Products";
}

<!-- Pop-up modal on "Add" button click  -->
<div id="add-modal-id" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <img src="~/images/success.png" width="30" height="30" /> &nbsp; Success!

                <button id="modal-exit-btn" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>A new item has been added to your Shopping Cart.</p>
            </div>
            <div class="modal-footer">
                <form asp-controller="ShoppingCart" asp-action="Index">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> View Shopping Cart
                    </button>
                </form>
                <br />
                <button id="modal-continue-btn" type="button" class="btn btn-secondary" data-dismiss="modal">Continue Shopping</button>
            </div>
        </div>
    </div>
</div>

<!-- Loading modal -->
<div id="loading-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <p align="center"><img src="~/images/loading.gif" width="50" height="50" /></p>
    </div>
</div>

<!-- Rename category modal -->
<div id="input-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p align="center">
                    <img src="~/images/edit.png" width="30" height="30" /> &nbsp;
                    Edit "@ViewBag.CurrentCategoryName" category
                    <button id="input-modal-exit-btn" type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$('#input-modal').hide();">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </p>
            </div>
            <form id="edit-category-form">
                <div class="modal-body">
                    @{
                        Category category;
                        string categoryName;
                        string categoryDesc;

                        if (ViewBag.CurrentCategoryId == null)
                        {
                            category = null;
                            categoryName = "";
                            categoryDesc = "";
                        }
                        else
                        {
                            category = await context.Category.FindAsync(ViewBag.CurrentCategoryId);
                            categoryName = category.Name;
                            categoryDesc = category.Description;
                        }
                    }
                    <table align="center">
                        <tr>
                            <td>Name &nbsp;</td>
                            <td>
                                <input id="new-category-name" required type="text" pattern="[A-Za-z0-9]{1,20}" value="@categoryName" />
                            </td>
                        </tr>
                        <tr>
                            <td>Description &nbsp;</td>
                            <td>
                                <textarea id="new-category-description" required pattern="[A-Za-z0-9]{1,20}" rows="5" cols="40" style="resize: none;">@categoryDesc</textarea>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button id="input-modal-rename-btn" type="button" class="btn btn-secondary" data-dismiss="modal">Rename</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- New child category modal (PER AJAX) -->
<div id="add-child-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p align="center">
                    <img src="~/images/folder.png" width="30" height="30" /> &nbsp;
                    Add new sub-category
