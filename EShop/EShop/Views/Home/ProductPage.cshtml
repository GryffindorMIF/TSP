        <div class="img_column">
            <img id="productImage" src="~/images/products/@ViewData["primary_image"]" height="170" width="120" onclick="openModal();currentSlide(1);" class="img_hover-shadow img_cursor" alt="Primary Image" style="float: left; margin-right: 10px;">
        </div>
