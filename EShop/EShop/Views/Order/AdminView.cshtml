@model IEnumerable<EShop.Models.Order>
@{
    ViewData["Title"] = "Order";
}

<div class="main" style="margin-left:auto">
    <h2>Orders Awaiting Confirmation</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <p>User</p>
                </th>
                <th>
                    <p>Order Id</p>
                </th>
                <th>
                    <p>Shopping Cart Id</p>
                </th>
                <th>
                    <p>Total Price</p>
                </th>
                <th>
                    <p>Purchase Time</p>
                </th>
                <th>
                    <p>Confirm Order</p>
                </th>
                <th>
                    <p>Reject Order</p>
                </th>
                <th>
                    <p>Show Review here maybe?</p>
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Select((value, index) => new { Value = value, Index = index }))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.User.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.ShoppingCartId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value.PurchaseDate)
                    </td>
                    <td>
                        @if (item.Value.StatusCode == 1)
                        {
                            <form asp-controller="Order" asp-action="ConfirmOrder" asp-route-orderId="@item.Value.Id">
                                <button id="checkout-btn" type="submit" class="btn btn-success">
                                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                                </button>
                            </form>
                        }
                        else
                        {
                            <p>Status Code: @item.Value.StatusCode</p>
                        }
                    </td>
                    <td>
                        @if (item.Value.StatusCode == 1)
                        {
                            <form asp-controller="Order" asp-action="RejectOrder" asp-route-orderId="@item.Value.Id">
                                <button id="checkout-btn" type="submit" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
                                </button>
                            </form>
                        }
                        else
                        {
                            <p>Status Code: @item.Value.StatusCode</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>