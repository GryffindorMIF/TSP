@model EShop.Models.ProductDetails

@{
    ViewData["Title"] = "AddProperty";
}

<div class="sidenav"></div>
<div class="main">
    <h2>Create</h2>

    <h4>
        Property for:
        <a asp-controller="Home" asp-action="ProductPage" asp-route-id="@ViewData["product_id"]">@ViewData["product_name"]</a>
    </h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddProperty" asp-route-productId=@ViewData["product_id"]>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Property name:
                    <input asp-for="Property" class="form-control" />
                    <span asp-validation-for="Property" class="text-danger"></span> 
                </div>
                <div class="form-group">
                    Description:
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="ProductId" value=@ViewData["product_id"] />
                <div class="form-group">
                    <input type="submit" value="Add Property" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ManageProperties"  asp-route-id="@ViewData["product_id"]">Back to List</a>
    </div>
</div>
