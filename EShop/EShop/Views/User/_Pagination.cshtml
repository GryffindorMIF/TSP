<div class="text-center">
    <ul class="pagination pagination-sm">

        <!-- Previous btn -->
        @if (ViewBag.PreviousPageNumber != null)
        {
            <li class="page-item">
                <a asp-controller="User" asp-action="Index"
                   asp-route-pageNumber=@ViewBag.PreviousPageNumber
                   class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        else //If there is no previous page number
        {
            <li class="page-item disabled">
                <a href="#" class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        <!-- Page buttons -->
        @for (var i = 0; i < ViewBag.PageCount; i++)
        {
            if (i == ViewBag.CurrentPageNumber)
            {
                <text>
                    <li class="page-item active">
                        <a class="page-link" href="#">
                            @i <span class="sr-only">(current)</span>
                        </a>
                    </li>
                </text>
            }
            else
            {
                <li class="page-item">
                    <a asp-controller="User" asp-action="Index"
                       asp-route-pageNumber=@i
                       class="page-link">
                        @i
                    </a>
                </li>
            }
        }
        <!-- Next btn -->
        @if (ViewBag.NextPageNumber != null)
        {
            <li class="page-item">
                <a asp-controller="User" asp-action="Index"
                   asp-route-pageNumber=@ViewBag.NextPageNumber
                   class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
        else
        {
            <text>
                <li class="page-item disabled">
                    <a href="#" class="page-link" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </text>
        }
    </ul>
</div>